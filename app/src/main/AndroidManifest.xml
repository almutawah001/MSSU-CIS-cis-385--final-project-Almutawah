<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.finalproject.smartpizzashop">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_pizza_shop"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_pizza_shop"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartPizzaShop">
        <activity android:name=".dashboard"></activity>
        <activity android:name=".addOrder" />
        <activity android:name=".addPizza" />
        <activity android:name=".homeScreen" />
        <activity android:name=".MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="SettingsActivity"
            android:label="@string/settings"
             />
    </application>

</manifest>